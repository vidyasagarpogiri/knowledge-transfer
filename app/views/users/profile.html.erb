<div class="container main_container">
        <div> <h1 id="name"><%= @user.name %></h1>
        <% if @user.id == current_user.id %>
          <div class="a pull-right" style="margin-top:-30px;">
          <%= link_to "Edit", edit_user_path(@user) %> <i class="icon-pencil"></i>
          </div>
          <% end %>
        </div><hr>
        <div class="span12">
        <%  if @user.avatar? %>
          <div class="userimage span3">
             <%= image_tag(@user.avatar_url, :size => "160x180") %>
          </div>
        <% else %>
          <div class="userimage span3">
            <img alt="" src="/assets/user.jpeg" height="160" width="180"></img>
          </div>
        <% end %>
          <div class="userdetails span5">
            <table>
              <tbody>
                  
                <tr>
                  <th> info</th>  
                  <td> Full Name: </td>
                  <td> <%= @user.profile_name %></td>
                </tr>
                
                <tr>
                  <th></th>
                  <td>Profile Name:</td>  
                  <td><%= @user.name%></td>
                </tr>
                <tr>
                  <th> </th>  
                  <td> Email:</td>
                  <td> <%= @user.email %> </td>
                </tr>
                
                <tr>
                  <th>Points:</th>
                  <% if @user.points.present? %>  
                  <td><%= @user.points %></td>
                  <% else %>
                  <td>0</td>
                  <% end %>
                </tr>
                
                <tr>
                  <th> visits</th>  
                  <td> last seen: </td>
                  <td><%= @user.last_sign_in_at %> </td>
                </tr>
                <tr>
                  <th>Total posted</th>  
                  <td> Questions: </td>
                  <td> <%= @user.questions.count %> </td>
                </tr>
                
                 <tr>
                  <th></th>  
                  <td> Articles: </td>
                  <td> <%= @user.articles.count %> </td>
                </tr>
                
                <tr>
                  <th></th>  
                  <td> Answers: </td>
                  <td> <%= @user.answers.count %> </td>
                </tr>
                
                <tr>
                  <th></th>  
                  <td> Codebases: </td>
                  <td> <%= @user.code_snippets.count %> </td>
                </tr>
                
                 <tr>
                  <th></th>  
                  <td> Posts: </td>
                  <td> <%= @user.blogs.count %> </td>
                 </tr>
              </table>
            </tbody>
          </div> 
          <div class="usercomment span4"><br>
            <p class="text-center">"It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."</p>
          </div>          
       </div>
       
       <div class="clear"></div>
       <hr>
       
       <%= render "users/data_list" %>
       
  </div>
   </div>
 
 
 
