<%= form_for @user do |f| %>
  <%= f.label :avatar, "Profile Pic" %>
  <img src=<%= @user.avatar %> width="160" height="180"/> <br>
  <%= f.file_field :avatar %><br>

  <%= f.label :name, "Name" %>
  <%= f.text_field :name %><br>
  <%= f.label :profile_name, "Profile Name" %>
  <%= f.text_field :profile_name %><br>
  <%= f.label :email, "Email"%>
  <%= f.text_field :email %><br>
 
  
  <%= f.submit "Submit"%>
<% end %>
