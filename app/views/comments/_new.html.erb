<%= render "shared/validations"%>
<%= form_for Comment.new do |comment| %>
  <input type="hidden" value="<%= params[:id]%>" name="commentable_id">
  <input type="hidden" value="<%= (params[:controller]).classify %>" name="commentable_type">
  <% if current_user %>
    <%= comment.text_area :content, :name=>"content", :class=>"span8"%><br>
    <%= comment.submit "comment", :class => "btn btn-success pull-right"%><br/>
  <% end %>
<% end %>

