<h3> List of Blog </h3><hr/>
<%= link_to "New Blog", new_blog_path %><br><hr/>
<% @blogs.each do |blog| %>
    <%= link_to blog.title, blog_path(blog.id) %><br>
  <b>  Content: </b><%= truncate(blog.content, :ommision => "... Read More", :length => 20) %>
    <%= link_to "Read More",blog_path(blog.id) %><br>
   <b>  Tags: </b> <%= blog.tags %><br>
    <% if blog.category.present? %>
   <b>  Category: </b> <%= blog.category.title %><br><hr>
  <% end %>
<% end %>


