<%= form_for(@blog) do |f| %>


<%= f.label :title, "Title" %> 
  <%= f.text_field :title, :style => "margin: 0px 0px 10px; width: 906px;" %><br>
  <%= f.label :content, "Content" %>  
  <%= f.bootsy_area :content, :style => "margin: 0px 0px 10px; width: 906px; height: 282px;" %>
  <%= f.label :tags, "Tags" %>
  <%= f.hidden_field :tags %> 
  <input type="text" id="tag"><br>
  <span id="tags"></span><br/>
  <i class="icon-plus-sign hand_sym" id="add_tag"></i><br>
  <%= f.submit "Submit"%> 
<% end %>

<script>
  $('#tag').keyup(function(key){
    if(key.keyCode == 13){
        add_tag();
      }
  });
  
  $("#add_tag").click(function(){
        add_tag();
  });
  
 //prevent enter key form submittion 
  
  $("#tag").keydown(function(event){
    if(event.keyCode == 13) {
      event.preventDefault();
      return false;
    }
  });

  function add_tag(){
      $('#tags').append($('#tag').val().trim()+" ");
      $('#article_tags').val($('#tags').text());
      $('#tag').val("");
  }
</script>
