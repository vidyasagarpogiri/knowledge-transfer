<h3> <%= @article.title %> </h3><hr>

<p><b>Content:</b> <br><%= raw @article.content %></p><br>
<p><b>Tags:</b> <%= @article.tags %></p><br>
<p><b>Category:</b> <%= @article.category.title %></p><br>

<% if current_user.present? %>
  <% if @article.user_id == current_user.id %>
    <%= link_to "Edit",edit_article_path(@article.id) %>
  <% end %>
<% end %>

<%= link_to "Show All", articles_path %>

