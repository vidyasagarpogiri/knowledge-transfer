<strong>
  <% if flash[:error] %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">×</a><%= flash[:error] %>      
    </div>
  <% elsif flash[:success] %>
    <div class="alert alert-success fade in">
      <a class="close" data-dismiss="alert" href="#">×</a><%= flash[:success] %>     
    </div>
  <% end %>
</strong>
