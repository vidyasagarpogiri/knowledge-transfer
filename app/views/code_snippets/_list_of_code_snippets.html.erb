<div id="comments">
  <% code_snippets.each do |code| %>
    <div class="comment">
        <p class="pull-right">
          <% code.tags.split(",").each do|tag| %>
            <span class="label label-info"><i class=" icon-tag"></i> <%= link_to tag, tags_code_snippets_path(:tag => tag), :remote => true %></span>
          <% end %>
        </p>
        <p>
            <span class="label label-inverse">
                <i class="icon-briefcase"></i> 
                <%= link_to code.category.title, show_code_snippets_category_path(code.category.id)%>
             </span>
        </p>
        <div class="clear"></div>
      <h4><%= link_to code.title, code_snippet_path(code.id), :class=>"post_title"  %></h4>
      <%# truncate(code.content, :ommision => "... Read More", :length => 350) %>
        <span class="content_in_list"><%= raw(code.content) %></span>
        <%= link_to "Read More",code_snippet_path(code.id) %><br>
      <p class="pull-right posted_by">
        <i class="icon-user"></i> <%= link_to code.user.name, user_code_snippets_user_path(code.user.id) %>
        <i class="icon-time"></i> <%= (code.created_at) %>
      </p>
    </div>  
    <br/>  
  <% end %>
</div>
<div id="paginator">
  <%= paginate code_snippets, :remote => true %>
</div>

<%= render "code_snippets/code_snippet_side_bar" %>

