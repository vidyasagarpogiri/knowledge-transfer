<h3>List of Questions</h3><hr/>
<%= link_to 'New Question', new_question_path %><br><hr/>
<% @questions.each do |question| %>
    <%= link_to question.title, question_path(question.id) %><br/>
   <b>Content:</b><%= raw(question.content) %>
    <%= link_to "Read More",question_path(question.id) %><br>
    <b>Tags:</b> <%= question.tags %><br/>
    <% if question.category.present? %>
    <b>Category:</b><%= question.category.title %><br><hr/>
  <% end %>
<% end %>
