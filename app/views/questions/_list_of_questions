<% questions.each do |question| %>
 <%= link_to question.title, question_path(question.id) %><br>
    <%= raw(question.content) %>
    <%= link_to "Read More",question_path(question.id) %><br/>
   <b> Tags:</b> <%= question.tags %><br/>
   <b>posted by:</b><%= link_to question.user.name, user_questions_user_path(question.user.id) %><br>
   <b>Category:</b><%= link_to question.category.title, show_questions_category_path(question.category.id) %><br>
   <b>Numbers Of Answers:</b><%= question.answers.count %><br><br><hr/>
   <% end %>
   
   <div id="paginator">
   <%= paginate @questions, :remote => true %>
   </div>
   
 
