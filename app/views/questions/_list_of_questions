<% questions.each do |question| %>

   <h4> <%= link_to question.title, question_path(question.id) %><br/></h4>
   <%= truncate(question.content, :ommision => "... Read More", :length => 30) %>
    <%= link_to "Read More",question_path(question.id) %><br>

   
   <b>Posted by:</b><%= link_to question.user.name, user_questions_user_path(question.user.id) %><br>
   <b>Category:</b><%= link_to question.category.title, show_questions_category_path(question.category.id) %><br>
   <b>Numbers Of Answers:</b><%= question.answers.count %><br><br>
   
   <p class="pull-right">
    <% question.tags.split(',').each do |tag| %> 
        <span class="label label-info"><i class=" icon-tag"></i> <a href="#"><%= tag %></a></span>
      <% end %>
   </p><br>
    
    
    <p class="pull-right posted_by">
      <i class="icon-user"></i><%= link_to question.user.name, user_questions_user_path(question.user.id) %>
      <i class="icon-time"></i> <%= format_time(question.created_at) %>
    </p>
     <div class="clear"></div><hr>
    
<% end %>


  
<div id="paginator">
   <%= paginate questions, :remote => true %>
</div>
   
 
