<%= form_for @question do |q| %>
  <%= q.label :title %>
  <%= q.text_field :title, :style => "margin: 0px 0px 10px; width: 906px;" %>
  <%= q.label :content %>
  <%= q.bootsy_area :content, :style => "margin: 0px 0px 10px; width: 906px; height: 282px;" %>
  <%= q.label :tags %>
  <%= q.hidden_field :tags %>
   <input type="text" id="tag"><br>
  <span id="tags"></span><br/>
  <%= q.submit 'Submit', :class => "btn btn-success" %>
<% end %>
<script>
  $('#tag').keyup(function(key){
    if(key.keyCode == 13){
      $('#tags').append($('#tag').val()+" ");
      $('#question_tags').val($('#tags').text());
      $('#tag').val("");
      }
  });
  
 //prevent enter key form submittion 
  
  $("#tag").keydown(function(event){
    if(event.keyCode == 13) {
      event.preventDefault();
      return false;
    }
  });


</script>




